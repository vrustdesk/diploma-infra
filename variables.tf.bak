variable "cloud_id" {
  type        = string
  description = "Yandex Cloud ID (например: b1gxxxxxxxxxxxxxxx)"
}

variable "folder_id" {
  type        = string
  description = "Yandex Cloud Folder ID (например: b1gxxxxxxxxxxxxxxx)"
}

variable "zone_a" {
  type        = string
  description = "Primary zone"
  default     = "ru-central1-a"
}

variable "zone_b" {
  type        = string
  description = "Secondary zone"
  default     = "ru-central1-b"
}

variable "ssh_pub_key" {
  type        = string
  description = "SSH public key"
}

variable "image_id" {
  type        = string
  description = "Ubuntu image ID"
}

variable "preemptible" {
  type        = bool
  description = "Use preemptible VMs"
  default     = true
}

variable "snapshot_retention_days" {
  type        = number
  description = "Retention for snapshots (days)"
  default     = 7
}

# Один из способов аутентификации:
variable "yc_token" {
  type        = string
  description = "YC OAuth/IAM token"
  default     = null
  sensitive   = true
}

# Альтернатива: путь к ключу сервисного аккаунта (JSON)
variable "sa_key_file" {
  type        = string
  description = "Path to service account key JSON (на bastion, не Windows-путь)"
  default     = null
  sensitive   = true
}
