$gi = ".gitignore"
$lines = @"
# Terraform
.terraform/
*.tfstate
*.tfstate.*
.terraform.lock.hcl
crash.log

# TF vars / secrets
*.tfvars
*.tfvars.json
serviceaccountkeyfile.json
yc-credentials*.json

# Ansible
*.retry
ansible/.vault*
ansible/vault*
ansible/*.secret
ansible/*.key

# Logs/tmp
logs/
*.log
*.tmp

# Big/binary artifacts
docs/screenshots/*.psd
"@
if (Test-Path $gi) { Add-Content $gi $lines } else { Set-Content $gi $lines }
.yc/
